<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hogwarts Quiz Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="result-background-container">
        <div class="container">
            <h1 id="final-results">Your Results</h1>
            <h2 id="house-placement">You are in <%= Object.keys(housePercentages).reduce((a, b) => housePercentages[a] > housePercentages[b] ? a : b) %>!</h2>
            <p id="house-align">Hereâ€™s how you align with each Hogwarts house:</p>

            <!-- Displaying the house percentages -->
            <div class="results">
                <% Object.entries(housePercentages).forEach(([house, percentage]) => { %>
                    <div class="house-result">
                        <span class="house-name"><%= house %>: <%= percentage %>%</span>
                        <div class="progress-bar <%= house.toLowerCase() %>">
                            <div class="progress-fill <%= house.toLowerCase() %>" data-percentage="<%= percentage %>"></div>
                        </div>
                        <!-- <span class="percentage"><%= percentage %>%</span> -->
                    </div>
                <% }); %>
            </div>

            <a href="/" class="btn">Take Quiz Again</a>
        </div>
    </div>
    <!-- JavaScript for dynamic progress bars -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const fills = document.querySelectorAll('.progress-fill');

            fills.forEach(fill => {
                const percentage = fill.getAttribute('data-percentage');
                fill.style.width = `${percentage}%`;
            });
        });

        
    </script>
</body>
</html>
